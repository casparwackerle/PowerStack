## Starter Kit configuration for Prometheus stack
##
defaultRules:
  create: true
  rules:
    etcd: false
    kubeScheduler: false

kubeScheduler:
  enabled: false

kubeEtcd:
  enabled: false

alertmanager:
  enabled: true

grafana:
  enabled: true
  adminPassword: prom-operator ######################################################################## <- change this
  persistence:
    enabled: true
    storageClassName: "{{ storageClassName }}"
    accessModes: ["{{ storageAccessMode }}"]
    size: 15Gi

prometheusOperator:
  enabled: true

prometheus:
  enabled: true
  storageSpec:
    volumeClaimTemplate:
      spec:
        storageClassName: "{{ storageClassName }}"
        accessModes: ["{{ storageAccessMode }}"]
        resources:
          requests:
            storage: 15Gi

apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: {{ tycho_testing_role_name }}
  namespace: {{ plan_ns }}
rules:
  - apiGroups: [""]
    resources: ["configmaps"]
    verbs: ["get","list","watch"]

  # Runner creates and deletes per-phase Pods, polls status, and fetches logs.
  - apiGroups: [""]
    resources: ["pods"]
    verbs: ["get","list","watch","create","delete","deletecollection"]

  - apiGroups: [""]
    resources: ["pods/log"]
    verbs: ["get"]

  # Optional but useful for debugging (kubectl describe uses events).
  - apiGroups: [""]
    resources: ["events"]
    verbs: ["get","list","watch"]

  # Slice 6: parent runner creates sub-runner Jobs and watches them.
  - apiGroups: ["batch"]
    resources: ["jobs"]
    verbs: ["get","list","watch","create","delete","deletecollection","patch"]
